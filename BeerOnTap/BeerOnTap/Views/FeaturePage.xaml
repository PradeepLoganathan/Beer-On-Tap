<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeerOnTap.Views.FeaturePage">

  
  <ScrollView Orientation="Vertical">
    <StackLayout Padding="0,20,0,0">
      <!--<Button Button.Text="Hello" Clicked = "ButtonClicked"/>-->
      <Frame HasShadow="True" OutlineColor="Black" >
        <Image Source="{Binding Labels.Large}" Margin="10" Aspect="AspectFit"/>
      </Frame>
      <Label Text="{Binding Name}" Margin="10"/>
      <Label Text="{Binding Description}" Margin="10"/>
      <Label Text="{Binding Style.Name}" />
    </StackLayout>
  </ScrollView>

  
  

</ContentPage>