                  x:Class="BeerOnTap.MenuPage"
                  xmlns:mypage="clr-namespace:BeerOnTap;assembly=BeerOnTap">
  

  <MasterDetailPage.Master>
    <ContentPage Title="Menu" BackgroundColor="#03415F">
      <StackLayout Orientation="Vertical">
        <Button Text="Home"/>

        <Button Text="Settings"/>

        <Button Text="About"/>

      </StackLayout>
    </ContentPage>
  </MasterDetailPage.Master>

  <MasterDetailPage.Detail>
    <mypage:MainPage/>
  </MasterDetailPage.Detail>

  
 
</MasterDetailPage>